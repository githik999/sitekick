{

"manifest_version": 2,
"name": "just a site kick",
"description": "show website's ip and country flag.show latency.proxy control",
"version": "1.0",

"icons": {
	"48": "icons/64.png",
	"96": "icons/64.png"
},

"browser_specific_settings": {
	"gecko": {
		"strict_min_version": "56.0a1"
	}
},

"background": {
	"scripts": [
		"background/main.js"
	]
},

"options_ui": {
"page": "options/options.html",
"browser_style": true
},

"page_action": {
"browser_style": true,
"default_icon": {
	"19": "icons/64.png",
	"38": "icons/64.png"
},
"show_matches": ["https://*.org/*"],
"default_title": "kick",
"default_popup": "popup/geo.html"
},

"browser_action": {
"browser_style": true,
"default_icon": {
	"16": "icons/64.png",
	"32": "icons/64.png"
},
"default_title": "settings",
"default_popup": "popup/browser_action.html"
},

"permissions": ["proxy", "webRequest","devtools","storage", "<all_urls>"]

}
